{
  "parser": "babel-eslint",
  "extends": "standard",
  "plugins": ["prettier"],
  "rules": {
    "semi": [2, "always"],
    "prettier/prettier": "error"
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "browser": true
  },
  "globals": {
    "__DEV__": true
  }
}
